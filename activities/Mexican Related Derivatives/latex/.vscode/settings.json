{
  
  // ===== Herramientas =====
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-pdf",
      "command": "latexmk",
      "args": ["-pdf", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
    },
    {
      "name": "latexmk-xelatex",
      "command": "latexmk",
      "args": ["-xelatex", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "%DOC%"]
    },
    {
      // Para biblatex + biber
      "name": "latexmk-xelatex-biber",
      "command": "latexmk",
      "args": ["-xelatex", "-synctex=1", "-interaction=nonstopmode", "-file-line-error", "-use-biber", "%DOC%"]
    },
    { "name": "bibtex", "command": "bibtex", "args": ["%DOCFILE%"] },
    { "name": "biber",  "command": "biber",  "args": ["%DOCFILE%"] }
  ],

  // ===== Recetas =====
  "latex-workshop.latex.recipes": [
    { "name": "latexmk (xelatex) + bibtex  [natbib]", "tools": ["latexmk-xelatex"] },
    { "name": "latexmk (xelatex) + biber   [biblatex]", "tools": ["latexmk-xelatex-biber"] },
    { "name": "latexmk (pdflatex)", "tools": ["latexmk-pdf"] },
    { "name": "XeLaTeX", "tools": ["xelatex"] }
  ],

  // ===== Por defecto (ajusta según tu proyecto) =====
  // Si usas natbib+BibTeX deja esta:
  "latex-workshop.latex.recipe.default": "latexmk (xelatex) + bibtex  [natbib]",
  // Si usas biblatex+biber cambia a:
  // "latex-workshop.latex.recipe.default": "latexmk (xelatex) + biber   [biblatex]",

  // ===== Auto build =====
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux","*.bbl","*.blg","*.bcf","*.run.xml","*.fls","*.fdb_latexmk",
    "*.lof","*.lot","*.toc","*.out","*.log","*.synctex.gz","*.nav","*.snm"
  ],

  // ===== Salida y visor =====
  // Envía artefactos a ./build (opcional). Si lo usas, añade \graphicspath{{build/}} o ajusta rutas.
  // "latex-workshop.latex.outDir": "build",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.synctex.afterBuild.enabled": true,

  // ===== Root y magic comments =====
  "latex-workshop.latex.rootFile.useSubFile": true


}